<!DOCTYPE html>
<html lang="en">
<!-- display head -->
<%- include('./partials/head.ejs') %>

    <body>
        <!-- display nav -->
        <%- include('./partials/nav.ejs') %>

            <div class="details content">
                <h2>
                    <%= blog.title %>
                </h2>
                <div class="class">
                    <p>
                        <%= blog.body %>
                    </p>
                </div>
                <a class="delete" data-doc="<%= blog._id %>">Delete</a>
            </div>

            <!-- display footer -->
            <%- include('./partials/footer.ejs') %>

                <script>
                    const deleteElement = document.querySelector('.delete')
                    deleteElement.addEventListener('click', (e) => {
                        const endpoint = `/blogs/${deleteElement.dataset.doc}`

                        fetch(endpoint, {
                            method: 'DELETE'
                        })
                            .then((response) => {
                                response.json()
                            }).then((data) => {
                                window.location.href = '/blogs'
                            }).cathc((err) => {
                                console.log(err)
                            })
                    })
                </script>

    </body>

</html>